@model IEnumerable<WebApplicationEShoppingCart.ViewModel.ShoppingCartModel>
@{
    ViewBag.Title = "ShoppingCart";
    decimal TotalAmount = 0.00M;
}

<h2 class="text-center">Shopping Cart</h2>

@using (Html.BeginForm("AddOrder", "Shopping", FormMethod.Post))
{

    <table class="table">
        <thead>
            <tr class="bg-primary">
                <th>Image</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>UnitPrice</th>
                <th>Total</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            TotalAmount += item.Total;
            <tbody>
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImagePath)" style="height: 50px; width: 50px" class="img-rounded" />
                    </td>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.Quantity.ToString("#,#00")
                    </td>
                    <td>
                        @item.UnitPrice.ToString("#,#00.00")
                    </td>
                    <td>
                        @item.Total.ToString("#,#00.00")
                    </td>
                </tr>
            </tbody>


        }

        <tr style="border-top: 2px solid maroon">
            <td></td>
            <td></td>
            <td></td>
            <td>
                <h3>Total Amount</h3>
            </td>
            <td>
                <h3>@TotalAmount.ToString("#,#00.00")</h3>
            </td>
        </tr>
    </table>

    <div>
        <input style="float: right; margin-top: 10px;" type="submit" name="save" value="Save" class="btn btn-primary btn-lg"  />
    </div>
}


